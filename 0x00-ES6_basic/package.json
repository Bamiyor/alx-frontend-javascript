{
 "version": "1.0.0",
  "description": "A project to demonstrate Jest, Babel, and ESLint setup",
  "type": "module",
  "scripts": {
    "test": "jest",
    "dev": "node ./0-main.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.20.0",
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.20.0",
    "jest": "^29.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "double"
      ]
    }
  },
  "author": "Your Name",
  "license": "ISC"
}
